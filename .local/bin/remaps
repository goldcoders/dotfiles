#!/usr/bin/env sh
# This script is called by i3 on startup to remap keys.
# Increase key speed via a rate change
xset r rate 300 50
# Map the caps lock key to super...
# super + hjkl = arrow keys
# super + io = Home,End
# super + up = Prior, Next
# super + enter = Capslock
xmodmap ~/.xmodmap
xcape -e 'Mode_switch=Escape'
